<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ssynhtn.helloworld.RecentTaskActivity"
    android:background="@android:color/holo_green_dark"
    android:clipChildren="false"
    >
    <!--android:background="#6542BF"-->


    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/thumb"
        android:progressDrawable="@drawable/__progress_horizontal_material"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:thumbOffset="20dp"
        style="@style/MySeekbar"

        />

    <SeekBar
        android:id="@+id/seek_bar_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/thumb__"
        android:progressDrawable="@drawable/__progress_horizontal_material"
        android:background="@drawable/bg_seek"
        android:paddingStart="33.5dp"
        android:paddingEnd="33.5dp"
        android:splitTrack="false"
        />

    <SeekBar
        android:id="@+id/seek_bar_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/__scrubber_control_selector_holo"
        android:progressDrawable="@drawable/__progress_horizontal_material"
        android:background="@null"
        android:padding="0dp"
        />

    <Button
        android:id="@+id/btn_notify"
        android:text="Notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:maxHeight="8dp"
        android:indeterminateOnly="false"
        android:indeterminate="false"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="50"
        android:secondaryProgress="80"
        />

    <View
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/ic_scale"
        />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:srcCompat="@drawable/avd"
        android:tint="@android:color/holo_red_light"
        />

    <ImageView
        android:id="@+id/img_view_two"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:srcCompat="@drawable/avd_music_progress"
        android:tint="@android:color/holo_orange_dark"
        />

    <ProgressBar
        android:id="@+id/avd_progress"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:indeterminateOnly="false"
        android:indeterminate="false"
        android:progressDrawable="@drawable/animation_test"
        />

    <ProgressBar
        android:id="@+id/in_prog"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:indeterminateOnly="true"
        android:indeterminate="true"
        />

    <com.ssynhtn.helloworld.view.SeekBarCompanionView
        android:id="@+id/seekbarParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:clipChildren="true"
        />

    <SeekBar
        android:id="@+id/seek_bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/thumb__"
        android:progressDrawable="@drawable/__progress_horizontal_material"
        android:background="@null"
        style="@style/MySeekbar"

        />


</LinearLayout>
