<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainAlertPopup">
        <item name="android:windowEnterAnimation">@anim/tishi_chuxian</item>
        <item name="android:windowExitAnimation">@anim/tishi_xiaoshi</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="EvaSuggestionButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/eva_btn</item>
        <item name="android:background">@drawable/bg_btn_ask_doctor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:minWidth">82dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
